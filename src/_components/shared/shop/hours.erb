  <h3 class="text-2xl md:text-5xl md:pt-8 mb-4 md:mb-12">Hours</h3>

  <section class="flex flex-col md:flex-row justify-between">
    <% @shop.hours.each do |day, time| %>
      <div class="flex lining-nums justify-between items-center border-b border-bone last-of-type:border-0 md:border-b-0 md:block text-center md:border-r md:pr-4 md:last-of-type:border-0">
        <div class="py-4"><%= day.capitalize %></div>
        <div class="py-4 text-2xl md:text-4xl"><%= time.upcase %></div>
      </div>
    <% end %>
  </section>
