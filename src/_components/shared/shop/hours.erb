<h3 class="text-2xl md:text-5xl md:pt-8 mb-4 md:mb-12">Hours</h3>

<section class="flex flex-col md:flex-row justify-between">
  <% @shop.hours.each do |day, time| %>
    <div class="border-bone border-b md:border-b-0 last-of-type:border-b-0 py-4 md:border-l md:first-of-type:border-l-0 pl-8 first-of-type:pl-0">
      <div class="flex md:block justify-between items-center md:text-center md:px-4 md:first-of-type:pl-0 md:last-of-type:pr-0">
        <div class="py-2"><%= day.capitalize %></div>
        <div class="py-2 text-2xl md:text-4xl"><%= time.upcase %></div>
      </div>
    </div>
  <% end %>
</section>
