<div class="flex pt-6 space-x-8 md:space-x-24 justify-center items-center">
  <% if @icons == true %>
    <a href="/">
      <img class="h-8" src="<%= relative_url '/images/icons/home.svg' %>" alt="home icon" />
    </a>
    <a href="callto:+<%= @shop.number_link %>">
      <img class="h-8" src="<%= relative_url '/images/icons/phone.svg' %>" alt="phone icon" />
    </a>
    <a href="<%= @shop.map_link %>">
      <img class="h-8" src="<%= relative_url '/images/icons/map-pin.svg' %>" alt="map-pin icon" />
    </a>
  <% end %>
  <a href="<%= @links.facebook %>">
    <img class="h-8" src="<%= relative_url '/images/icons/facebook.svg' %>" alt="facebook icon" />
  </a>
  <a href="<%= @shop.links.ig %>">
    <img class="h-8" src="<%= relative_url '/images/icons/instagram.svg' %>" alt="instagram icon" />
  </a>
  <a href="<%= @links.youtube %>">
    <img class="h-8" src="<%= relative_url '/images/icons/youtube.svg' %>" alt="youtube icon" />
  </a>
  <a href="<%= @shop.links.tiktok %>">
    <svg xmlns="http://www.w3.org/2000/svg" style="height: 24px;" class="bi bi-tiktok fill-old-gold" viewBox="0 0 16 16">
      <path d="M9 0h1.98c.144.715.54 1.617 1.235 2.512C12.895 3.389 13.797 4 15 4v2c-1.753 0-3.07-.814-4-1.829V11a5 5 0 1 1-5-5v2a3 3 0 1 0 3 3V0Z"/>
    </svg>
  </a>
</div>
